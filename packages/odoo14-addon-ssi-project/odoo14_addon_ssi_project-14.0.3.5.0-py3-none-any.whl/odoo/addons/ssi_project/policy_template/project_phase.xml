    <field name="template_id" ref="policy_template_project_phase" />
    <field
            name="field_id"
            search="[('model_id.model','=','project_phase'),('name','=','terminate_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','project_phase'),('value','=','open')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('project_phase_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Cancel -->
<record id="policy_template_project_phase_cancel" model="policy.template_detail">
    <field name="template_id" ref="policy_template_project_phase" />
    <field
            name="field_id"
            search="[('model_id.model','=','project_phase'),('name','=','cancel_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','project_phase'),('value','in',['draft','open','done'])]"
        />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
            name="group_ids"
            eval="[(6,0,[ref('project_phase_validator_group')])]"
        />
            <field name="restrict_additional" eval="0" />
</record>

