{
  "elasticsearch": {
    "host": "localhost",
    "port": 9200,
    "index_prefix": "knowledge_",
    "auto_setup": true,
    "enabled": true
  },
  "security": {
    "allowed_base_directory": "/Users/yourusername/knowledge-base",
    "restrict_file_operations": true,
    "log_all_operations": false
  },
  "version_control": {
    "enabled": true,
    "type": "git",
    "auto_commit": false
  },
  "server": {
    "name": "elasticsearch-mcp",
    "version": "1.0.0",
    "description": "Comprehensive knowledge management MCP server"
  },
  "logging": {
    "level": "INFO",
    "file": "mcp_server.log",
    "max_size": "10MB"
  }
}
