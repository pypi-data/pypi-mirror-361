<odoo>
<!-- Workflow -->
<record id="project_phase_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="project_phase_workflow_module_category" />
</record>

<record id="project_phase_user_group" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="project_phase_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('project_phase_viewer_group'))]" />
</record>
<record id="project_phase_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field name="category_id" ref="project_phase_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('project_phase_user_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Data Ownership -->

<record id="project_phase_project_group" model="res.groups">
    <field name="name">Project Manager</field>
    <field name="category_id" ref="project_phase_data_ownership_module_category" />
</record>

<record id="project_phase_company_group" model="res.groups">
    <field name="name">Company</field>
    <field name="category_id" ref="project_phase_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('project_phase_project_group'))]" />
</record>

<record id="project_phase_company_child_group" model="res.groups">
    <field name="name">Company and All Child Companies</field>
    <field name="category_id" ref="project_phase_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('project_phase_company_group'))]" />
</record>

<record id="project_phase_all_group" model="res.groups">
    <field name="name">All</field>
    <field name="category_id" ref="project_phase_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('project_phase_company_child_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
