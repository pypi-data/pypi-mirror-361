    title="üìã –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é",
    structure={
        "‚öô –ù–∞—Å—Ç—Ä–æ–π–∫–∏": {
            "üîí –ë–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç—å": {
                "üõ°Ô∏è 2FA": lambda i, v: i.followup.send("–ù–∞—Å—Ç—Ä–æ–π–∫–∏ 2FA", ephemeral=True),
                "üîë –ü–∞—Ä–æ–ª—å": lambda i, v: i.followup.send("–°–º–µ–Ω–∞ –ø–∞—Ä–æ–ª—è", ephemeral=True)
            },
            "üé® –í–Ω–µ—à–Ω–∏–π –≤–∏–¥": lambda i, v: i.followup.send("–í—ã–±–æ—Ä —Ç–µ–º—ã", ephemeral=True)
        },
        "üìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞": lambda i, v: i.followup.send("–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö", ephemeral=True),
        "‚ùì –ü–æ–º–æ—â—å": {
            "üì¨ –ü–æ–¥–¥–µ—Ä–∂–∫–∞": lambda i, v: i.followup.send("–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –∫ @Admin", ephemeral=True)
        }
    },
    timeout=120,
    ephemeral=True
)

@bot.slash_command(name="–º–µ–Ω—é", description="–û—Ç–∫—Ä—ã—Ç—å –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é")
async def –º–µ–Ω—é(interaction: nextcord.Interaction):
    await menu.send(interaction)

