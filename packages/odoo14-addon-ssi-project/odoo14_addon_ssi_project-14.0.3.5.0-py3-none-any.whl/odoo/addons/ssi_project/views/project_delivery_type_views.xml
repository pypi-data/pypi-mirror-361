<odoo>
    <record id="project_deliverable_type_view_search" model="ir.ui.view">
        <field name="name">project_deliverable_type search</field>
        <field name="model">project_deliverable_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="project_deliverable_type_view_tree" model="ir.ui.view">
        <field name="name">project_deliverable_type tree</field>
        <field name="model">project_deliverable_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="category_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="project_deliverable_type_view_form" model="ir.ui.view">
        <field name="name">project_deliverable_type form</field>
        <field name="model">project_deliverable_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                    <field name="category_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="project_deliverable_type_action" model="ir.actions.act_window">
          <field name="name">Project Deliverable Types</field>
          <field name="res_model">project_deliverable_type</field>
          <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_project_deliverable_type"
        name="Deliverable Types"
        parent="ssi_project.menu_project_root_configuration"
        action="project_deliverable_type_action"
        groups="project_deliverable_type_configurator_group"
    />
</odoo>
