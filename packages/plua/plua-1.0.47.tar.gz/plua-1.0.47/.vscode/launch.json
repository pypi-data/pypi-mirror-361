{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PLua file", 
      "type": "luaMobDebug",
      "request": "launch",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPort": 8818,
      "stopOnEntry": false,
      "sourceEncoding": "UTF-8",
      "executable": "./scripts/run.sh",
      "arguments": [
        "--debugger",
        "--fibaro",
        "${file}"
      ],
      "listenPublicly": true
    },
    {
      "name": "PLua no fibaro file", 
      "type": "luaMobDebug",
      "request": "launch",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPort": 8818,
      "stopOnEntry": false,
      "sourceEncoding": "UTF-8",
      "executable": "./scripts/run.sh",
      "arguments": [
        "--debugger",
        "${file}"
      ],
      "listenPublicly": true
    },
    {
      "name": "PLua test", 
      "type": "luaMobDebug",
      "request": "launch",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPort": 8818,
      "stopOnEntry": false,
      "sourceEncoding": "UTF-8",
      "executable": "./scripts/run.sh",
      "arguments": [
        "--debugger",
        "--fibaro",
        "--task",
        "uploadQA",
        "examples/fibaro/QA_basic.lua"
      ],
      "listenPublicly": true
    },
    {
      "name": "PLuaexe file", 
      "type": "luaMobDebug",
      "request": "launch",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPort": 8818,
      "stopOnEntry": false,
      "sourceEncoding": "UTF-8",
      "executable": "./dist/plua",
      "arguments": [
        "--debugger",
        "--fibaro",
        "${file}"
      ],
      "listenPublicly": true
    },
    {
      "name": "Lua MobDebug: Listen and Run",
      "type": "luaMobDebug",
      "request": "attach",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPublicly": true,
      "listenPort": 8818,
      "sourceEncoding": "UTF-8"
    }
  ]
}