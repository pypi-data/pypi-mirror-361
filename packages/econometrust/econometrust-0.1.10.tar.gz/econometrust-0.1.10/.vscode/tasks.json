{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "maturin",
            "args": [
                "develop",
                "--profile",
                "dev"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}