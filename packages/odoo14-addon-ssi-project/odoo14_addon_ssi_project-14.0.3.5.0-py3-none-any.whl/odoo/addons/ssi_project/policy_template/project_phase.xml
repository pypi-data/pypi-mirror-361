<odoo>
<record id="policy_template_project_phase" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_project_phase" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','project_phase'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record id="policy_template_project_phase_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_project_phase" />
    <field
            name="field_id"
            search="[('model_id.model','=','project_phase'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','project_phase'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('project_phase_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Done -->
<record id="policy_template_project_phase_done" model="policy.template_detail">
    <field name="template_id" ref="policy_template_project_phase" />
    <field
            name="field_id"
            search="[('model_id.model','=','project_phase'),('name','=','done_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','project_phase'),('value','=','open')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('project_phase_user_group')])]" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if document.ttype == "group" and document.number_of_child == 0:
    result = True
elif document.ttype == "single" and document.number_of_task == 0:
    result = True
    </field>
</record>

