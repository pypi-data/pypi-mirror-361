[Unit]
Description="{{ pine_name }}-melon-default-worker %I"
PartOf={{ pine_name }}-workers.target

[Service]
User={{ user }}
Group={{ user }}
Restart=always
ExecStart={{ pine_cmd }} worker --queue default
StandardOutput=file:{{ pine_dir }}/logs/worker.log
StandardError=file:{{ pine_dir }}/logs/worker.error.log
WorkingDirectory={{ pine_dir }}
