{
  "odpt_api": {
    "base_url": "https://ckan.odpt.org/api/3/action/",
    "api_key": "YOUR_API_KEY_HERE",
    "rate_limit": 100,
    "timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 1
  },
  "collection": {
    "schedule_interval": 300,
    "data_types": [
      "train",
      "bus",
      "station",
      "route",
      "fare"
    ],
    "regions": ["tokyo"],
    "max_records_per_request": 1000,
    "enable_real_time": true
  },
  "storage": {
    "format": "json",
    "compression": true,
    "retention_days": 365,
    "backup_enabled": true,
    "archive_threshold_days": 30
  },
  "monitoring": {
    "health_check_interval": 60,
    "alert_email": "admin@example.com",
    "log_level": "INFO",
    "metrics_enabled": true
  },
  "performance": {
    "worker_threads": 4,
    "connection_pool_size": 20,
    "request_timeout": 30,
    "batch_size": 100
  }
}
