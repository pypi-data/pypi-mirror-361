<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View-->
    <record id="lve_withholding_concept_view_search" model="ir.ui.view">
        <field name="name">lve_withholding_concept_view.search</field>
        <field name="model">lve_withholding_concept</field>
        <field name="arch" type="xml">
            <search string="Withholding Concept">
                <field name="name"/>
                <field name="lve_withholding_type_id"/>
                <separator/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Active" name="inactive" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>
    <!--Form View-->
    <record id="lve_withholding_concept_view_form" model="ir.ui.view">
        <field name="name">lve_withholding_concept.form</field>
        <field name="model">lve_withholding_concept</field>
        <field name="arch" type="xml">
            <form string="Withholding Concept">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="lve_withholding_type_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     <!--List View-->
    <record id="lve_withholding_concept_view_list" model="ir.ui.view">
        <field name="name">lve_withholding_concept.list</field>
        <field name="model">lve_withholding_concept</field>
        <field name="arch" type="xml">
            <list string="Name">
                <field name="name"/>
                <field name="lve_withholding_type_id"/>
            </list>
        </field>
    </record>
    <!--Action -->
    <record id="lve_withholding_concept_model_action" model="ir.actions.act_window">
        <field name="name">Withholding Concept</field>
        <field name="res_model">lve_withholding_concept</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>