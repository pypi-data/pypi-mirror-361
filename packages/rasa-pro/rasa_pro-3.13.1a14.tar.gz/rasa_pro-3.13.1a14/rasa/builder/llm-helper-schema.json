{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "content_blocks": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["type", "text"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["text"]
              },
              "text": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "required": ["type", "text"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["link"]
              },
              "text": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          {
            "type": "object",
            "required": ["type", "file", "content"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["file"]
              },
              "file": {
                "type": "string"
              },
              "content": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "required": ["type", "text"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["code"]
              },
              "text": {
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}
