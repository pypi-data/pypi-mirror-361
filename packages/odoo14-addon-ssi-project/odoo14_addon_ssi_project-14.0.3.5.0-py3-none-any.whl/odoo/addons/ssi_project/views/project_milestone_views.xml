<odoo>
<record id="project_milestone_view_search" model="ir.ui.view">
    <field name="name">project_milestone - search</field>
    <field name="model">project_milestone</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="project_milestone_view_tree" model="ir.ui.view">
    <field name="name">project_milestone -tree</field>
    <field name="model">project_milestone</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="project_id" />
                <field name="parent_id" />
                <field name="number_of_task" optional="hide" />
                <field name="number_of_task_done" optional="hide" />
                <field name="task_completion_percentage" widget="percentage" />
            </xpath>
        </data>
    </field>
</record>

<record id="project_milestone_view_form" model="ir.ui.view">
    <field name="name">project_milestone - form</field>
    <field name="model">project_milestone</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//group[@name='header_left']" position="inside">
                <field name="project_id" />
                <field name="allowed_parent_ids" widget="many2many_tags" />
                <field name="parent_id" domain="[('id','in',allowed_parent_ids)]" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">

            </xpath>
        </data>
    </field>
</record>

<record id="project_milestone_action" model="ir.actions.act_window">
        <field name="name">Project Milestones</field>
        <field name="res_model">project_milestone</field>
        <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="menu_project_milestone"
        name="Milestones"
        parent="menu_project_root_configuration"
        action="project_milestone_action"
        groups="project_milestone_configurator_group"
    />
</odoo>
