{% extends "base.jinja2" %}

{% block body %}
<div class="dither"></div>
<div class="flex-content-center">
    <main>
        <div class="page-heading">
            {% if back_url is defined %}
            <a href="{{ back_url }}">
                {{ icon_button('arrow-left') }}
