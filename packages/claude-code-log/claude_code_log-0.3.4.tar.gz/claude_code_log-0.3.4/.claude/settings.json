{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix 2>&1"
          },
          {
            "type": "command",
            "command": "uv run ty check 2>&1"
          },
          {
            "type": "command",
            "command": "uv run pyright 2>&1"
          },
          {
            "type": "command",
            "command": "uv run pytest 2>&1"
          }
        ]
      }
    ]
  }
}