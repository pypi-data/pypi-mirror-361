{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Doggo Index (Dry Run)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/doggo/cli.py",
            "args": [
                "index",
                "./local/images",
                "--dry-run"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Doggo Organize",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/doggo/cli.py",
            "args": [
