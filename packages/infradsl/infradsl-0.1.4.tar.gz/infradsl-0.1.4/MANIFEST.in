# Include the README and other documentation
include README.md
include requirements.txt

# Include package data
recursive-include infradsl/templates *
recursive-include infradsl *.py
recursive-include infradsl *.yaml
recursive-include infradsl *.yml  
recursive-include infradsl *.json

# Include configuration files
include pyproject.toml
include setup.py

# Exclude development and build files
exclude *.pyc
exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .git*
recursive-exclude * .venv
recursive-exclude * .env
recursive-exclude infradsl.egg-info *
