SearchScreen {
    align: center middle;
}

#search-dialog {
    grid-size: 2;
    grid-gutter: 0 2;
    grid-rows: 1fr;
    padding: 0 1;
    height: 15;
    width: 45;
    border: thick $background 80%;
    background: $surface;
}

#label-help {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#quit,#cancel {
    margin-top: 1;
    width: 100%;
}
