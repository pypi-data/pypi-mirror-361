{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust via Python",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "${workspaceFolder}/test.py"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "sourceLanguages": [
                "rust"
            ],
            "preLaunchTask": "build-debug",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        }
    ]
}