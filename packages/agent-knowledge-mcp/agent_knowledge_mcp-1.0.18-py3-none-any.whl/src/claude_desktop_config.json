      "// DESCRIPTION": "‚úÖ RECOMMENDED: Install from PyPI (easiest setup)",
      "// STATUS": "‚úÖ LIVE ON PYPI - Ready to use!",
      "command": "uvx",
      "args": ["agent-knowledge-mcp"]
    },

    "// ============ ALTERNATIVE INSTALLATION METHODS ============": "// Other ways to install",

    "agent-knowledge-github": {
      "// DESCRIPTION": "Install directly from GitHub (latest development)",
      "command": "uvx",
      "args": [
        "--from", 
        "git+https://github.com/itshare4u/AgentKnowledgeMCP.git", 
        "agent-knowledge-mcp"
      ]
    },

    "AgentKnowledgeMCP-venv": {
      "// DESCRIPTION": "Using virtual environment (for development)",
      "command": "./AgentKnowledgeMCP/.venv/bin/python",
      "args": [
        "-m", 
        "src"
      ],
      "env": {
        "PYTHONPATH": "./AgentKnowledgeMCP"
      }
    },

    "agent-knowledge-global": {
      "// DESCRIPTION": "Global Python installation (manual setup)",
      "command": "python3",
      "args": ["/path/to/AgentKnowledgeMCP/src/server.py"],
      "env": {
        "PYTHONPATH": "/path/to/AgentKnowledgeMCP"
      }
    },

    "// ============ SPECIALIZED CONFIGURATIONS ============": "// For specific use cases",

    "agent-knowledge-files-only": {
      "// DESCRIPTION": "File operations only (no Elasticsearch required)",
      "command": "uvx",
      "args": ["agent-knowledge-mcp"],
      "env": {
        "DISABLE_ELASTICSEARCH": "1",
        "FILES_ONLY_MODE": "1"
      }
    },

    "agent-knowledge-secure": {
      "// DESCRIPTION": "Secure mode with restricted file access",
      "command": "uvx", 
      "args": ["agent-knowledge-mcp"],
      "env": {
        "ALLOWED_BASE_DIRECTORY": "/path/to/secure/workspace",
        "RESTRICT_FILE_OPERATIONS": "1"
      }
    },

    "agent-knowledge-dev": {
      "// DESCRIPTION": "Development mode with debug output",
      "command": "uvx",
      "args": ["agent-knowledge-mcp"],
      "env": {
        "DEBUG": "1",
        "LOG_LEVEL": "DEBUG"
      }
    },

    "// ============ TEAM CONFIGURATIONS ============": "// Generic configs for sharing",

    "agent-knowledge-team": {
      "// DESCRIPTION": "‚úÖ EASY TEAM SETUP: Just share this config!",
      "// NOTE": "No paths to update - works for everyone!",
      "command": "uvx",
      "args": ["agent-knowledge-mcp"]
    },

    "agent-knowledge-docker": {
      "// DESCRIPTION": "Docker-based installation (if containerized)",
      "command": "docker",
      "args": [
        "run", 
        "--rm", 
        "-i", 
        "-v", 
        "${HOME}/knowledge:/data",
        "agent-knowledge-mcp:latest"
      ]
    }
  },

