#!/usr/bin/env python3
"""
SNID SAGE - Main GUI Interface
"""
import sys
import os

# Add project root to Python path
project_root = os.path.dirname(os.path.dirname(os.path.dirname(os.path.dirname(os.path.abspath(__file__)))))
sys.path.insert(0, project_root)

# Import the FastGUILauncher from run_snid_gui.py to get the loading screen
from run_snid_gui import FastGUILauncher, parse_arguments, suppress_third_party_output

def main():
    """Main function that uses FastGUILauncher for consistent loading screen"""
    # Suppress third-party output
    suppress_third_party_output()
    
    # Parse arguments (same as run_snid_gui.py)
    args = parse_arguments()
    
    # Create and run the fast launcher
    launcher = FastGUILauncher(args)
    return launcher.run()

if __name__ == "__main__":
    sys.exit(main()) 