# QUADS MCP Server Configuration
# Copy this file to .env and update with your values

# QUADS API Configuration
MCP_QUADS__BASE_URL=https://quads.example.com/api/v3

# Authentication - Use either username/password OR auth_token
# Option 1: Username/Password (recommended - token will be auto-retrieved)
MCP_QUADS__USERNAME=your-username
MCP_QUADS__PASSWORD=your-password

# Option 2: Pre-existing auth token (if you have one)
# MCP_QUADS__AUTH_TOKEN=your-auth-token-here

# Optional: Request timeout in seconds
MCP_QUADS__TIMEOUT=30

# Optional: SSL certificate verification (set to false for self-signed certificates)
MCP_QUADS__VERIFY_SSL=true

# Optional: JSON config file path
# MCP_CONFIG_FILE=/path/to/config.json

# Server Configuration (optional)
MCP_SERVER__NAME=quads-mcp
MCP_SERVER__VERSION=0.1.0

# Development/Debug Settings (optional)
# MCP_DEBUG=true
# MCP_LOG_LEVEL=info