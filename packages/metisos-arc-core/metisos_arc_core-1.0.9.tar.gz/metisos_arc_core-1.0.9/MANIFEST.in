# Include package metadata
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include teaching packs
recursive-include packs *.yml *.yaml *.json *.jsonl *.txt *.md

# Include CLI scripts
recursive-include cli *.py

# Include tests (optional for source distribution)
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
prune .git
prune .pytest_cache
prune __pycache__
prune *.egg-info
prune dist
prune build

# Exclude editor and OS files
global-exclude .DS_Store
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude *~
