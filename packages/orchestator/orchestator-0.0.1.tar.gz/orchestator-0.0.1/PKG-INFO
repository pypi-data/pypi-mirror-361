from orchestator import Orchestrator

orch = Orchestrator()

@orch.on("greeting")
async def handle_greeting(payload):
    return f"Hello, {payload.get('name', 'world')}!"

# Simulate a message
response = await orch.dispatch("greeting", {"name": "Federico"})
print(response)  # â†’ Hello, Federico!

