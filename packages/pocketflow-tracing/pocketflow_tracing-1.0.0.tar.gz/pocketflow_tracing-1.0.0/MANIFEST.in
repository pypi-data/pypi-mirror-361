# Include the README and license files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include all Python files in the package
recursive-include pocketflow_tracing *.py

# Include examples
recursive-include pocketflow_tracing/examples *.py

# Exclude compiled Python files and cache directories
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache
